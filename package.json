{
  "name": "dev-conector-api",
  "version": "1.0.0",
  "description": "Social network for developer",
  "main": "src/server.js",
  "scripts": {
    "lint": "eslint src --color",
    "start": "node src/server",
    "dev": "nodemon src/server",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format:check": "prettier --check \"src/**/*.{js,json,md}\"",
    "format": "prettier --write \"src/**/*.{js,json,md}\" "
  },
  "keywords": [
    "nodejs",
    "express",
    "moongoDB",
    "mongoose"
  ],
  "author": "John Medina",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.2.4",
    "express": "^4.17.1",
    "express-validator": "^6.2.0",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.7.7",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "airbnb-base",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error",
            "log"
          ]
        }
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "useTabs": false,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,json}": "eslint",
    "src/**/*.{js,json,md}": "prettier --write"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.14.4"
  }
}
